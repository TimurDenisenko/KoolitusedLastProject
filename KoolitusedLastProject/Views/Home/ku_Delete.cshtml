@model KoolitusedLastProject.Models.Kursus

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kustuta</title>
</head>
<body>
    <h2>Kustuta</h2>
    <h3>Kas olete kindel, et soovite selle kustutada?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nimetus
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kursusenimetus)
            </dd>

            <dt>
                Kirjeldus
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kursusekirjeldus)
            </dd>

            <dt>
                Õpetaja ID
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OpetajaId)
            </dd>

            <dt>
                Maht
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kursusemaht)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Kustuta" class="btn btn-default" /> |
                @Html.ActionLink("Tagasi nimekirja", "Kursused")
            </div>
        }
    </div>
</body>
</html>
